  {
    "name": "Colores",
    "settings": [
      {
        "type": "header",
        "content": "Esquema de colores"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Color primario",
        "default": "#1e40af"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Color secundario",
        "default": "#dc2626"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Color de acento",
        "default": "#fbbf24"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Color del texto",
        "default": "#111827"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Color de fondo",
        "default": "#ffffff"
      }
    ]
  },
  {
    "name": "Tipografía",
    "settings": [
      {
        "type": "header",
        "content": "Fuentes"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Fuente de encabezados",
        "info": "Selecciona la fuente para títulos y encabezados"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Fuente del cuerpo",
        "info": "Selecciona la fuente para el texto del cuerpo"
      },
      {
        "type": "range",
        "id": "font_body_scale",
        "min": 1.0,
        "max": 1.3,
        "step": 0.1,
        "unit": "x",
        "label": "Escala de fuente del cuerpo",
        "default": 1.0
      }
    ]
  },
  {
    "name": "Configuración de la tienda",
    "settings": [
      {
        "type": "header",
        "content": "Información de contacto"
      },
      {
        "type": "text",
        "id": "contact_phone",
        "label": "Teléfono",
        "default": "900 123 456"
      },
      {
        "type": "text",
        "id": "contact_email",
        "label": "Email",
        "default": "info@balizav16.es"
      },
      {
        "type": "text",
        "id": "contact_address",
        "label": "Dirección",
        "default": "Madrid, España"
      },
      {
        "type": "header",
        "content": "Redes sociales"
      },
      {
        "type": "url",
        "id": "social_facebook_url",
        "label": "Facebook"
      },
      {
        "type": "url",
        "id": "social_instagram_url",
        "label": "Instagram"
      },
      {
        "type": "url",
        "id": "social_tiktok_url",
        "label": "TikTok"
      },
      {
        "type": "url",
        "id": "social_youtube_url",
        "label": "YouTube"
      },
      {
        "type": "url",
        "id": "social_twitter_url",
        "label": "Twitter"
      }
    ]
  },
  {
    "name": "Configuración del carrito",
    "settings": [
      {
        "type": "header",
        "content": "Carrito de compras"
      },
      {
        "type": "select",
        "id": "cart_type",
        "label": "Tipo de carrito",
        "options": [
          {
            "value": "drawer",
            "label": "Cajón lateral"
          },
          {
            "value": "page",
            "label": "Página completa"
          }
        ],
        "default": "drawer"
      },
      {
        "type": "checkbox",
        "id": "cart_show_vendor",
        "label": "Mostrar proveedor del producto",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "cart_show_note",
        "label": "Permitir notas del pedido",
        "default": true
      }
    ]
  },
  {
    "name": "Configuración de productos",
    "settings": [
      {
        "type": "header",
        "content": "Páginas de productos"
      },
      {
        "type": "checkbox",
        "id": "product_show_vendor",
        "label": "Mostrar proveedor",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "product_show_sku",
        "label": "Mostrar SKU",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "product_show_quantity_selector",
        "label": "Mostrar selector de cantidad",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "product_show_pickup_availability",
        "label": "Mostrar disponibilidad de recogida",
        "default": true
      }
    ]
  },
  {
    "name": "Configuración de envío",
    "settings": [
      {
        "type": "header",
        "content": "Información de envío"
      },
      {
        "type": "number",
        "id": "free_shipping_threshold",
        "label": "Umbral de envío gratuito (€)",
        "default": 100
      },
      {
        "type": "text",
        "id": "shipping_text",
        "label": "Texto de envío",
        "default": "Envío gratuito a toda España"
      },
      {
        "type": "textarea",
        "id": "shipping_policy",
        "label": "Política de envío",
        "default": "Envío gratuito en pedidos superiores a 100€. Entrega en 2-3 días laborables."
      }
    ]
  },
  {
    "name": "SEO",
    "settings": [
      {
        "type": "header",
        "content": "Optimización para motores de búsqueda"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Icono que aparece en la pestaña del navegador. Recomendado: 32x32px"
      },
      {
        "type": "textarea",
        "id": "seo_description",
        "label": "Descripción meta por defecto",
        "default": "Tienda especializada en balizas V16 homologadas por la DGT. Obligatorias desde 2026. Envío gratuito y garantía de 2 años."
      },
      {
        "type": "text",
        "id": "seo_keywords",
        "label": "Palabras clave",
        "default": "baliza v16, dgt, emergencia, carretera, homologada, 2026"
      }
    ]
  }
]