<section class="featured-product">
  {% if section.settings.product %}
    {% assign product = section.settings.product %}
    <div class="featured-container">
      <div class="featured-image">
        {% if product.featured_image %}
          <img src="{{ product.featured_image | image_url: width: 600 }}" alt="{{ product.title }}">
        {% endif %}
      </div>
      <div class="featured-content">
        <h2>{{ product.title }}</h2>
        <p>{{ product.description | strip_html | truncate: 200 }}</p>
        {% include 'price', product: product %}
        <a href="{{ product.url }}" class="btn btn-primary">Ver Producto</a>
      </div>
    </div>
  {% endif %}
</section>

<style>
  .featured-product {
    padding: 3rem 2rem;
    background-color: #f9f9f9;
  }

  .featured-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    max-width: 1200px;
    margin: 0 auto;
    align-items: center;
  }

  .featured-image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .featured-content h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .featured-container {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Producto Destacado",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Producto"
    }
  ]
}
{% endschema %}
