<link rel="stylesheet" href="{{ 'section-footer.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'section-footer.css' | asset_url | stylesheet_tag }}</noscript>

<footer class="footer" id="contacto">
  <div class="page-width">
    <!-- Main Footer -->
    <div class="footer__content">
      <!-- Company Info -->
      <div class="footer__section">
        <div class="footer__logo">
          <img src="{{ 'Logo_Balizadgt.png' | asset_url }}" alt="Baliza DGT V16" width="150" height="auto" loading="lazy">
        </div>
        <p class="footer__description">
          {{ section.settings.description | default: 'Distribuidor oficial de balizas V16 certificadas IDIADA. Tecnología homologada DGT con garantía de cumplimiento normativo.' }}
        </p>
        <div class="footer__social">
          {% if section.settings.facebook_url != blank %}
            <a href="{{ section.settings.facebook_url }}" class="footer__social-link" target="_blank" rel="noopener">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
              </svg>
            </a>
          {% endif %}
          
          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" class="footer__social-link" target="_blank" rel="noopener">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          {% endif %}
          
          {% if section.settings.tiktok_url != blank %}
            <a href="{{ section.settings.tiktok_url }}" class="footer__social-link" target="_blank" rel="noopener">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-2.54v5.79c0 2.84-2.26 5.14-5.09 5.14a5.09 5.09 0 0 1-5.09-5.14V2H1.46v5.79c0 4.42 3.4 8.07 7.73 8.07s7.73-3.65 7.73-8.07V2h-2.54v.44a4.83 4.83 0 0 1-3.77 4.25z"/>
              </svg>
            </a>
          {% endif %}
          
          {% if section.settings.youtube_url != blank %}
            <a href="{{ section.settings.youtube_url }}" class="footer__social-link" target="_blank" rel="noopener">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
              </svg>
            </a>
          {% endif %}
          
          {% if section.settings.twitter_url != blank %}
            <a href="{{ section.settings.twitter_url }}" class="footer__social-link" target="_blank" rel="noopener">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          {% endif %}
        </div>
      </div>

      <!-- Products -->
      <div class="footer__section">
        <h4 class="footer__section-title">Productos</h4>
        <ul class="footer__links">
          {% for link in linklists.footer-products.links %}
            <li><a href="{{ link.url }}" class="footer__link">{{ link.title }}</a></li>
          {% else %}
            <li><a href="#productos" class="footer__link">Challux V16 CH-019 Premium</a></li>
            <li><a href="#productos" class="footer__link">Certificación IDIADA</a></li>
            <li><a href="#productos" class="footer__link">Características Técnicas</a></li>
            <li><a href="#faq" class="footer__link">Preguntas Frecuentes</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Information -->
      <div class="footer__section">
        <h4 class="footer__section-title">Información</h4>
        <ul class="footer__links">
          {% for link in linklists.footer-info.links %}
            <li><a href="{{ link.url }}" class="footer__link">{{ link.title }}</a></li>
          {% else %}
            <li><a href="#normativa" class="footer__link">Normativa DGT</a></li>
            <li><a href="#normativa" class="footer__link">Guía de Uso</a></li>
            <li><a href="#faq" class="footer__link">Preguntas Frecuentes</a></li>
            <li><a href="{{ pages.terms-conditions.url }}" class="footer__link">Garantía y Devoluciones</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Contact -->
      <div class="footer__section">
        <h4 class="footer__section-title">Contacto</h4>
        <div class="footer__contact">
          <div class="footer__contact-item">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
            <a href="tel:+34900123456">{{ section.settings.phone | default: '900 123 456' }}</a>
          </div>
          <div class="footer__contact-item">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            <a href="mailto:{{ section.settings.email | default: 'info@balizadgt.es' }}">{{ section.settings.email | default: 'info@balizadgt.es' }}</a>
          </div>
          <div class="footer__contact-item">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
            <span>{{ section.settings.address | default: 'Madrid, España' }}</span>
          </div>
        </div>
        
        <div class="footer__hours">
          <h5 class="footer__hours-title">Horario de Atención</h5>
          <p class="footer__hours-text">
            {{ section.settings.hours | default: 'Lun - Vie: 9:00 - 18:00<br>Sáb: 10:00 - 14:00' }}
          </p>
        </div>
      </div>
    </div>

    <!-- Bottom Footer -->
    <div class="footer__bottom">
      <div class="footer__bottom-content">
        <div class="footer__legal">
          <span>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }} - Todos los derechos reservados</span>
          <div class="footer__legal-links">
            <a href="{{ pages.privacy-policy.url }}" class="footer__legal-link">Política de Privacidad</a>
            <a href="{{ pages.terms-conditions.url }}" class="footer__legal-link">Términos y Condiciones</a>
            <a href="{{ pages.cookie-policy.url }}" class="footer__legal-link">Cookies</a>
          </div>
        </div>
        
        <div class="footer__certification">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
          <span>Certificado IDIADA PC25050254</span>
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción de la empresa",
      "default": "Tu tienda especializada en balizas V16 homologadas por la DGT. Seguridad y calidad garantizada."
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Teléfono",
      "default": "900 123 456"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "info@balizadgt.es"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Dirección",
      "default": "Madrid, España"
    },
    {
      "type": "html",
      "id": "hours",
      "label": "Horario de atención",
      "default": "Lun - Vie: 9:00 - 18:00<br>Sáb: 10:00 - 14:00"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "URL de Facebook"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "URL de Instagram"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "URL de TikTok"
    },
    {
      "type": "url",
      "id": "youtube_url",
      "label": "URL de YouTube"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "URL de Twitter"
    }
  ]
}
{% endschema %}