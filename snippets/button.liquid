<button class="btn btn-{{ include.style | default: 'primary' }}" {% if include.disabled %}disabled{% endif %}>
  {{ include.text }}
</button>

<style>
  .btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
    font-weight: 600;
    transition: all 0.2s;
    text-decoration: none;
    display: inline-block;
  }

  .btn-primary {
    background-color: {{ settings.color_primary }};
    color: white;
  }

  .btn-primary:hover:not(:disabled) {
    opacity: 0.9;
  }

  .btn-secondary {
    background-color: {{ settings.color_secondary }};
    color: {{ settings.color_primary }};
    border: 1px solid {{ settings.color_primary }};
  }

  .btn-secondary:hover:not(:disabled) {
    background-color: #f0f0f0;
  }

  .btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }
</style>
